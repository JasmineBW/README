# Run tests
lane :tests do
  desc "Build and test application"

  run_tests(project: "Read.me.xcodeproj",
            devices: ["iPhone 12 mini"],
            scheme: "Read.me (iOS) Development", 
            only_testing: ["Tests iOS"]
          
  )
  run_tests(project: "Read.me.xcodeproj",
            devices: ["iPhone 12 mini"],
            scheme: "Read.meKit"
  )                    
end

